<%= form_for(@project) do |f| %>

  <%= render 'shared/error_message', object: f.object %>

  <div class="field">
	  <%= f.label :name %>
		<%= f.text_field :name, class: 'form-control' %>
	</div>

	<div class="field">
	  <%= f.label :description %>
		<%= f.text_field :description, class: 'form-control' %>
	</div>

  <div class="actions">
    <%= f.submit "Update", class: 'btn btn-primary'%>
  </div>
<% end %>

<%= link_to "Back", :back %>